@model MVC_template.Data.Product

@{
    ViewData["Title"] = "Ẩn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ẩn</h1>

<h3>Bạn có chắc muốn ẩn sản phẩm này</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prices)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prices)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/Products/@Model.Image" width="500" height="500">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.SupplierName)
        </dd>
        
    </dl>
    
    <form asp-action="Hide" asp-route-id = "@Model.ProductId">
        @{
            if (Model.IsHide == "false     ")
            {
                <input type="submit" value="Ẩn" class="btn btn-danger" /> 
            }
            else
            {
                <input type="submit" value="Hiện" class="btn btn-success" />
            }
        }
 |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
